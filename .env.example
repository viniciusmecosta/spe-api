# Configurações Gerais
PROJECT_NAME="SPE - Sistema de Ponto Eletrônico"
API_V1_STR="/api/v1"
TIMEZONE="America/Fortaleza"

# Banco de Dados
# Exemplo SQLite: sqlite:///./spe.db
# Exemplo PostgreSQL: postgresql://user:password@localhost:5432/spe_db
SQLALCHEMY_DATABASE_URI="sqlite:///./spe.db"

# Segurança
# Gere uma chave segura usando: openssl rand -hex 32
SECRET_KEY="change_this_to_a_strong_secret_key"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Uploads
UPLOAD_DIR="uploads"